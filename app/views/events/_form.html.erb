<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>
      <div class="alert aleart-danger">
        <ul>
          <% event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :place %>
    <%= form.text_field :place, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :start_time %>
    <div>
      <%= from.datetime_select  :start_time, start_year: now.year, end_year: now.year + 1 %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :end_time %>
    <div>
      <%= from.datetime_select  :end_time, start_year: now.year, end_year: now.year + 1 %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :context %>
    <%= form.text_area :context, class: 'form-control', row: 10 %>
  </div>

  <div class="actions">
    <%= form.submit '作成', class: 'btn btn-default', data: { disable_with: '作成中...'} %>
  </div>
<% end %>
